<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedLessonActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/mid_gold">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo_background"
            />

        <TextView
            android:id="@+id/tv_user_name_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:textColor="@color/white" />


    </LinearLayout>
    <TextView
        android:id="@+id/tv_course_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="course header"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/tv_course_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1hr 20min"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/tv_course_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In this lesson we will introduce you to the concept of web. this includes the languages of CSS HTML and Javascript "
        android:textSize="15sp"
        android:textColor="@color/mid_gold"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/btn_watch_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WATCH VIDEO"
        android:layout_marginTop="20dp"
        android:textSize="10sp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:text="Take notes:"/>

    <EditText
        android:id="@+id/edt_notes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/box_border"
        android:padding="5dp"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btn_save_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save note"
        android:layout_marginRight="20dp"
        android:textSize="10sp"
        android:layout_gravity="right"/>
    <Button
        android:id="@+id/btn_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark as complete"
        android:layout_marginTop="20dp"
        android:textSize="10sp"
        android:layout_gravity="center"/>
</LinearLayout>